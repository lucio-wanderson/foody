{%extends "layout.njk"%}

{% block head%}
    <title>Receitas - Foodfy</title>
{%endblock head%}

{%block content%}
    <div class="all-recipes">

        <div class="recipes"> 

            {% for recipe in recipes %}
                <div class="link-show" id="{{recipe.id_recipe}}">
                    <div class="recipe" style="background: url({{recipe.src}})no-repeat center center/cover"></div>
                    <div>
                        <h4>{{ recipe.title }}</h4>
                        <p>{{ recipe.chef_name }}</p>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{%endblock content%}