<div class="item-form user">
            <div>Email</div>
            <div>
                <input type="text"
                    name="email"
                    placeholder="Digite seu email"
                    value="{{user.email}}"
                    onblur="Validate.apply(this, 'isEmail')">
            </div>
</div>

<div class="item-form user">
    <div>Senha</div>
    <div class="input">
        <input type="password" 
            name="password" 
            {%if not user.id%}
            placeholder="Digite uma senha forte" 
            {%else%}
            placeholder="Digite sua senha para atualizar o cadastro"
            {%endif%}>

    </div>
</div>