{%extends "session/session-layout.njk"%}

{%block content%}

    <h2>Perdeu a senha?</h2>
    <form action="/users/forgot-password" method="POST">

        <div class="item-form user">
            <div>Email</div>
            <div>
                <input type="text"
                    name="email"
                    placeholder="Digite seu email"
                    value="{{user.email}}"
                    onblur="Validate.apply(this, 'isEmail')">
            </div>
        </div>

        <div class="user-footer">
            <div></div>
            <button class="button recovery" type="submit">Recuperar senha</button>
        </div>


    </form>

{%endblock%}